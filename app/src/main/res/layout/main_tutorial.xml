<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame_container">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            </android.support.v4.view.ViewPager>

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                app:radius="5dp"
                app:fillColor="#252829"
                android:layout_marginBottom="10dp" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal|bottom">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa con Nosotros"
                android:id="@+id/btnbederr"
                android:textColor="@color/color_blanco"
                android:textStyle="bold"
                android:drawableLeft="@drawable/icono_bederr_boton"
                android:paddingLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@drawable/holo_flat_button_verde_claro" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa con Facebook"
                android:layout_marginTop="5dp"
                android:id="@+id/btnfacebook"
                android:drawableLeft="@drawable/icono_bederr_boton_facebook"
                android:textColor="@color/color_blanco"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="15dp"
                android:background="@drawable/holo_flat_button_facebook" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SKIP"
        android:id="@+id/txt_skip"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/plomo_claro_silver"
        android:layout_gravity="right|top" />

</FrameLayout>