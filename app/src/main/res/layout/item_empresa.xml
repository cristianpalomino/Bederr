<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="5dp"
    android:layout_height="75dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:background="@drawable/holo_flat_button_plomo_claro"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:padding="5dp"
            android:id="@+id/itemfondoempresa"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgempresa"
                android:layout_marginLeft="5dp"
                android:src="@drawable/placeholder_empresa"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Empresa"
                    android:textColor="@color/color_blanco"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:lines="1"
                    android:maxLines="1"
                    android:id="@+id/nombreempresa" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/color_blanco"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Empresa desc."
                    android:id="@+id/descripcionempresa" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>