<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="fill_horizontal"
        android:id="@+id/frameLayout"
        android:weightSum="1"
        android:visibility="visible" >

        <EditText
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:id="@+id/edt_action_middle"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableLeft="@drawable/menu_lupa"
            android:hint="Buscar locales"
            android:lines="1"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:textSize="16sp"
            android:padding="5dp"
            android:singleLine="true"
            android:textColorHint="#8A8A8D"
            android:textColor="#8A8A8D"
            android:maxEms="15"
            android:background="@drawable/holo_flat_edittext_plomo_oscuro"
            android:minLines="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action_right"
            android:src="@drawable/menu_cerrar"
            android:adjustViewBounds="true"
            android:scaleType="matrix"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />
    </FrameLayout>
</LinearLayout>