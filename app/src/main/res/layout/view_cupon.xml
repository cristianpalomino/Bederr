<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <LinearLayout
        android:id="@+id/card_tipo_cupon"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/holo_flat_button_plomo_claro"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beneficio Coporativo"
                android:textColor="#F8F5F1"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:id="@+id/txt_nombre_cupon"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="18sp"
                android:lines="1"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="center|left"
                android:text="Almuerzo Ejecutivo 14 soles."
                android:id="@+id/txt_descripcion_cupon"
                android:textColor="#F8F5F1"
                android:layout_weight="1"
                android:textSize="16sp"
                android:lines="1"
                android:maxLines="1" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/img_empresa_cupon"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:src="@drawable/placeholder_empresa" />

    </LinearLayout>
</FrameLayout>